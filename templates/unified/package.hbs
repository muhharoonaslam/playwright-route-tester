{
  "name": "{{#if bare}}{{framework.name}}-route-tests{{else}}playwright-route-tests{{/if}}",
  "version": "1.0.0",
  "description": "Generated Playwright route tests for {{framework.name}} application",
  "type": "module",
  "scripts": {
    {{#if bare}}
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "install-browsers": "playwright install"
    {{else}}
    "test": "playwright test",
    "test:headed": "playwright test --headed", 
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:public": "playwright test tests/public-routes.spec.js",
    "test:protected": "playwright test tests/auth-redirect.spec.js",
    "test:api": "playwright test tests/api-routes.spec.js",
    "report": "playwright show-report",
    "install-browsers": "playwright install",
    {{#ifFramework "nextjs"}}
    "test:build": "next build && npm run test",
    {{/ifFramework}}
    {{#ifFramework "express"}}
    "test:server": "node server.js & sleep 5 && npm run test; kill %1",
    {{/ifFramework}}
    "ci": "npm run install-browsers && npm run test"
    {{/if}}
  },
  "dependencies": {
    "@playwright/test": "^1.40.0"
  },
  {{#unless bare}}
  "devDependencies": {
    {{#ifFramework "nextjs"}}
    "next": "latest"
    {{/ifFramework}}
    {{#ifFramework "express"}}
    "express": "latest"
    {{/ifFramework}}
  },
  {{/unless}}
  "engines": {
    "node": ">=16.0.0"
  },
  {{#if features.jenkins}}
  "jenkins": {
    "buildCommand": "{{#ifFramework "nextjs"}}npm run build{{else}}npm install{{/ifFramework}}",
    "testCommand": "npm run test",
    "devCommand": "{{#ifFramework "nextjs"}}npm run dev{{else}}{{#ifFramework "express"}}npm start{{else}}npm run start{{/ifFramework}}{{/ifFramework}}",
    "port": {{#if framework.port}}{{framework.port}}{{else}}3000{{/if}}
  },
  {{/if}}
  "playwright": {
    "testDir": "./tests",
    "config": "./playwright.config.js"
  },
  "keywords": [
    "playwright",
    "testing",
    "{{framework.name}}",
    "route-testing",
    "authentication",
    "e2e"
  ],
  "author": "Generated by playwright-route-tester v{{version}}",
  "license": "MIT"
}