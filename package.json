{
  "name": "playwright-route-tester",
  "version": "2.1.2",
  "description": "Intelligent CLI tool that automatically generates Playwright tests with smart framework detection, zero-configuration setup, and advanced route testing",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "playwright-route-tester": "dist/cli.js"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "prepublishOnly": "npm run build",
    "test": "node --test src/**/*.test.js",
    "dev": "node src/cli.js",
    "dev:scan": "node src/cli.js scan",
    "dev:setup": "node src/cli.js setup"
  },
  "keywords": [
    "playwright",
    "testing",
    "route-testing",
    "authentication",
    "e2e-testing",
    "cli-tool",
    "automation"
  ],
  "author": "Muhammad Haroon Aslam <muhharoonaslam@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/muhharoonaslam/playwright-route-tester.git"
  },
  "bugs": {
    "url": "https://github.com/muhharoonaslam/playwright-route-tester/issues"
  },
  "homepage": "https://github.com/muhharoonaslam/playwright-route-tester#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "handlebars": "^4.7.8",
    "inquirer": "^9.2.8"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.30.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE",
    "CLAUDE.md"
  ]
}
